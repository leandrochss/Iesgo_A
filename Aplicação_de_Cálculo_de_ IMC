using System;
using System.Windows.Forms;

namespace IMCCalculadora
{
    public partial class Form1 : Form
    {
        public Form1()
        {
            InitializeComponent();
        }

        private void btnCalcular_Click(object sender, EventArgs e)
        {
            try
            {
                // Coleta dos dados inseridos pelo usu√°rio
                float peso = float.Parse(txtPeso.Text);
                float altura = float.Parse(txtAltura.Text);

                // C√°lculo do IMC
                float imc = peso / (altura * altura);

                // Condicional para exibir a mensagem correta
                if (imc < 18.5)
                {
                    lblResultado.Text = $"Seu IMC: {imc:F2}\nVoc√™ est√° abaixo do peso. ‚ö†Ô∏è";
                }
                else if (imc >= 18.5 && imc <= 24.9)
                {
                    lblResultado.Text = $"Seu IMC: {imc:F2}\nVoc√™ est√° com o peso normal. üéØ";
                }
                else if (imc >= 25 && imc <= 29.9)
                {
                    lblResultado.Text = $"Seu IMC: {imc:F2}\nVoc√™ est√° com sobrepeso. üîî";
                }
                else
                {
                    lblResultado.Text = $"Seu IMC: {imc:F2}\nVoc√™ est√° com obesidade. üö®";
                }
            }
            catch (FormatException)
            {
                MessageBox.Show("Por favor, insira valores v√°lidos!", "Erro", MessageBoxButtons.OK, MessageBoxIcon.Error);
            }
        }

        // Limpar campos de entrada
        private void btnLimpar_Click(object sender, EventArgs e)
        {
            txtPeso.Text = "";
            txtAltura.Text = "";
            lblResultado.Text = "";
        }

        // Fechar a aplica√ß√£o
        private void btnSair_Click(object sender, EventArgs e)
        {
            Application.Exit();
        }
    }
}
